extends base.jade

block scripts
    script(src='assets/js/player.min.js')

block content
    h1 nPlay
    p Welcome to nPlay
    video#myvideo(controls, onclick='toggle(this)')
    p
        div.urlbox.input-group
            span#addon.input-group-addon URL
            input#url.form-control(type='text', placeholder='Direct link or YouTube!', aria-describedby='addon')
        a#channel.btn.btn-link(href='#', role='button') Our Channel